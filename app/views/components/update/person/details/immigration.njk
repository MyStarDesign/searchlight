<div class="grid-row">
  
  <div class="column-two-thirds">
      
    <form class="form" method="get" action="check">
        
      <fieldset class="form-group">
        <legend>
          <p class="bold">What is their immigration status?</p>
        </legend>
        
        {% if data.personalDetails.immigration.value != "Asylum seeker" %}
          <div class="multiple-choice">
            <input id="asylum-seeker" type="radio" name="personalDetailValue" value="Asylum seeker">
            <label for="asylum-seeker">Asylum seeker</label>
          </div>
        {% endif %}
        
        {% if data.personalDetails.immigration.value != "Exceptional leave to remain" %}
          <div class="multiple-choice">
            <input id="exceptional-leave" type="radio" name="personalDetailValue" value="Exceptional leave to remain">
            <label for="exceptional-leave">Exceptional leave to remain</label>
          </div>
        {% endif %}
        
        {% if data.personalDetails.immigration.value != "Indefinite leave to remain" %}
          <div class="multiple-choice">
            <input id="indefinite" type="radio" name="personalDetailValue" value="Indefinite leave to remain">
            <label for="indefinite">Indefinite leave to remain</label>
          </div>
        {% endif %}
        
      </fieldset>
        
      <fieldset class="form-group">
        <legend class="visuallyhidden">Immigration number</legend>
        <label class="form-label" for="iref">Immigration reference number</label>
        <input class="form-control" id="imref" type="text" name="verificationlevel" {% if data.updateType != 1 %} value={{data.personalDetails.immigration.level}} {% endif %}>
      </fieldset>
      
      {% if data.updateType != 1 %}
        <p class="form-block" style="margin-top:-15px;">or</p>
        <div class="form-group">
          <div class="multiple-choice">
            <input id="unknown" name="personalDetailValue" type="checkbox" value=null>
              <label for="unknown">Remove the immigration status</label>
          </div>
        </div>
      {% endif %}


      <div class="form-group">
        <input class="button" type="submit" value="Next">
      </div>

    </form>
    <p><a href="task-list">Cancel</a></p>
  </div>

</div>