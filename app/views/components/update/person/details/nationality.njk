<h2 class="heading-medium question">What is their nationality?</h2>

<div class="grid-row">
  <div class="column-two-thirds">
    <form class="form" method="get" action="personal-detail-handler">
      <legend>
        <h1 class="visually-hidden">
          Do you know their nationality?
         </h1>
      </legend>
      
      <div id="nationalityField">
        {% include "components/update/person/details/nationality-selector.njk" %}
      </div>
      
      <p class="form-block" style="margin-top:-15px;">or</p>
      <div class="form-group">
          <div class="multiple-choice">
            <input id="stateless" name="data" type="radio" value="stateless" {% if data.personalDetails.nationality.value == "stateless" %} checked {% endif %}>
            <label for="stateless">They are stateless</label>
          </div>
          <div class="multiple-choice">
            <input id="unknown" name="data" type="radio" value="unknown" {% if data.personalDetails.nationality.value == "unknown" %} checked {% endif %}>
            <label for="unknown">Their nationality is unknown</label>
          </div>
        {% if data.updateType == 3 %}
          <div class="multiple-choice">
            <input id="remove" name="data" type="radio" value=null}>
            <label for="remove">Remove the nationality</label>
          </div>
        {% endif %}
      </div>
      
<!--
      {% if data.updateType == 3 %}
        <div class="form-group">
          <div class="multiple-choice">
            <input id="unknown" name="data" type="checkbox" value=null>
            <label for="unknown">Remove the nationality</label>
          </div>
        </div>
      {% endif %}
-->
        
      <div class="form-group">
        <input class="button" type="submit" value="Next">
      </div>
    </form>
    <p><a href="task-list">Cancel</a></p>
  </div>
</div>